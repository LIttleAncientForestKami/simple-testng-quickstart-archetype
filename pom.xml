<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>lafk.pl</groupId>
  <artifactId>simple-testng-quickstart</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Archetype - simple-testng-quickstart</name>
  <url>http://testng.org/doc/maven.html</url>


  <properties>
    <!-- build encoding now platform independent -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- JDK set to 1.8 -->
    <maven.compile.source>1.8</maven.compile.source>
    <maven.compile.target>1.8</maven.compile.target>
    <!-- Versions of dependencies follow -->
    <!-- mvn versions:display-dependency-updates to see if anything's new -->
    <testngVer>6.9.10</testngVer>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>${testngVer}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>2.19.1</version>
            <configuration>
              <groups>functest,perftest</groups>
            </configuration>
          </plugin>

    </plugins>
  </build>
</project>
